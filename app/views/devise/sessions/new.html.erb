<div class="container-fluid">

  <div class="row">
    <div class="col-md-6 offset-md-3 text-center">
      <h2 class="title">ログイン</h2>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class = "row">
        <div class ="col-md-4 offset-md-5">
          <%= render "devise/shared/error_messages", resource: resource %>
        </div>
      </div>
      <div class="field">
        <div class="row">
          <div class="col-md-1 offset-md-3 text-right">
            <i class="fas fa-envelope fa-2x"></i>
          </div>
          <div class="col-md-5">
            <%= f.email_field :email, class: "form-control", autofocus: true, placeholder:"Eメール", autocomplete: "email" %>
          </div>
        </div>
      </div>

      <div class="field">
        <div class="row">
          <div class="col-md-1 offset-md-3 text-right">
            <i class="fas fa-lock fa-2x"></i>
          </div>
          <div class="col-md-5">
              <%= f.password_field :password, class: "form-control", placeholder:"パスワード", autocomplete: "current-password" %>
            </div>
          </div>
        </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <div class="row">
            <div class="col-md-5 offset-md-4">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          </div>
        </div>
      <% end %>

      <div class="row">
        <div class="col-md-5 offset-md-4 ">
          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-info btn-block" %>
          </div>
        </div>
      </div>
  <% end %>

  <div class="row">
    <div class="col-md-5 offset-md-4 text-center">
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <div>まだアカウントをお持ちでない方は<strong><%= link_to "新規登録", new_registration_path(resource_name) %></strong></div>
        <small>*パスワードを忘れた方は【xxxxxx＠xxxxx.com】までお問い合わせください</small>
      <% end %>
    </div>
  </div>
</div>