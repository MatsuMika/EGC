<div class="container">

  <div class = "row">
    <div class ="col-md-6 offset-md-3 text-center">
      <h4>ログイン</h4>
    </div>
  </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="field">
          <div class = "row">
            <div class ="col-md-1 offset-md-3 text-right">
              <h5 class="fas fa-envelope"></h5>
            </div>
            <div class ="col-md-5">
              <%= f.email_field :email, class: "form-control", autofocus: true, placeholder:"Eメール", autocomplete: "email" %>
            </div>
          </div>
        </div>

        <div class="field">
          <div class = "row">
            <div class ="col-md-1 offset-md-3 text-right">
              <h5 class="fas fa-lock"></h5>
            </div>
            <div class ="col-md-5">
                <%= f.password_field :password, class: "form-control", placeholder:"パスワード", autocomplete: "current-password" %>
              </div>
            </div>
          </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <div class = "row">
              <div class ="col-md-5 offset-md-4">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            </div>
          </div>
        <% end %>

        <div class = "row">
          <div class ="col-md-5 offset-md-4 ">
            <div class="actions">
              <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
            </div>
          </div>
        </div>
    <% end %>

    <div class = "row">
      <div class ="col-md-5 offset-md-4 text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
</div>