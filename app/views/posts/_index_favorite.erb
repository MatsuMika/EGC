<% if post.favorited_by?(current_user) %>
  <%= link_to post.favorites.count, post_favorites_path(post), method: :delete, remote: true do %>
    <i class="fas fa-heart heart-red"></i>
  <% end %>
<% else %>
  <%= link_to post.favorites.count, post_favorites_path(post), method: :post, remote: true do %>
    <i class="fas fa-heart heart-white"></i>
  <% end %>
<% end %>
