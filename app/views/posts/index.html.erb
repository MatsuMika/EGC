<div class="container-fluid">
  <div class="row">

    <div class ="col-md-2">
      <div class="row">
        <div class ="col-md">
          <%= form_with url: search_search_path, method: :get, local: true do |f| %>
            <div>
              <%= f.select :type, {'投稿者名': 'user', 'portfolio(作品名/サブタイトル/開発環境)': 'post'}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
              <%= f.text_field :keyword, class: "form-control", placeholder: "検索"%>
            </div>
            <div class="actions text-right">
              <%= f.submit :"検索", class: "btn btn-info btn-sm " %>
            </div>
          <% end %>
        </div>
       </div>
    </div>

    <div class ="col-md-10">
      <div class="row">
        <div class ="col-md-11 text-center">
          <h2 class="title">作品一覧</h2>
        </div>
      </div>
      <div class="row">
        <div class ="col-md-11">
          <h3><%= @posts.count %> 件</h3>
        </div>
      </div>
      <div class="row">
        <div class ="col-md-11">
          <%= render "posts/index_form", posts: @posts %>
        </div>
      </div>
    </div>
  </div>
</div>